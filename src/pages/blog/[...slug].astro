---
import { getCollection, getEntry } from 'astro:content';
import LayoutBlog from '../../layouts/LayoutBlog.astro';
import { siteConfig } from '../../config/site';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<LayoutBlog title={`${post.data.title} - ${siteConfig.title}`}>
  <article class="px-4 sm:px-6 lg:px-8 py-8 prose prose-lg mx-auto bg-surface-2 rounded-lg">
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-primary mb-4">
        {post.data.title}
      </h1>
      <div class="flex items-center justify-center gap-4 text-secondary">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('pt-BR', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        <div class="flex gap-2">
          {post.data.tags.map((tag) => (
            <a
              href={`/blog/tag/${tag}`}
              class="text-sm bg-surface-1 px-2 py-1 rounded-full hover:bg-hover transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      </div>
    </header>

    <div class="max-w-3xl mx-auto">
      <Content />
    </div>

    <footer class="mt-12 pt-8 border-t border-secondary/20">
      <div class="flex justify-between items-center">
        <a
          href="/blog"
        >
          ‚Üê Voltar para o blog
        </a>
        <div class="flex gap-4">
          <button
            aria-label="Compartilhar no Twitter"
          >
            Compartilhar
          </button>
        </div>
      </div>
    </footer>
  </article>
</LayoutBlog>

<style>
  .prose {
    max-width: 65ch;
  }

  .prose :global(img) {
    border-radius: 0.5rem;
    margin: 2rem auto;
    border: 1px solid var(--border-color);
  }

  .prose :global(pre) {
    padding: 1.5rem;
    border-radius: 0.5rem;
    background-color: var(--surface-2);
    overflow-x: auto;
    border: 1px solid var(--border-color);
  }

  .prose :global(code):not(pre code) {
    background-color: var(--surface-1);
    color: var(--text-primary);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose :global(p), .prose :global(li) {
    color: var(--text-secondary);
  }

  .prose :global(h1), .prose :global(h2), .prose :global(h3) {
    color: var(--text-primary);
  }
</style>