              </svg>
            </a>
            <a
              href={siteConfig.socialLinks.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            >
              <span class="sr-only">LinkedIn</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
            
          </div>
      </div>
    </div>
  </div>
</section>

<script type="module" client:load>
  // List of skills to type out
  const skills = [
    "JavaScript",
    "TypeScript",
    "Astro",
    "React",
    "Node.js",
    "CSS",
    "Tailwind",
    "FullStack",
    "APIs"
  ];
  const typedSkill = document.getElementById("typed-skill");
  const cursor = document.querySelector(".typing-cursor");
  let skillIdx = 0;
  let charIdx = 0;
  let typing = true;

  function typeSkill() {
    if (!typedSkill) return;
    if (typing) {
      if (charIdx < skills[skillIdx].length) {
        typedSkill.textContent += skills[skillIdx][charIdx];
        charIdx++;
        setTimeout(typeSkill, 80);
      } else {
        typing = false;
        setTimeout(typeSkill, 1200);
      }
    } else {
      if (charIdx > 0) {
        typedSkill.textContent = skills[skillIdx].slice(0, charIdx - 1);
        charIdx--;
        setTimeout(typeSkill, 40);
      } else {
        typing = true;
        skillIdx = (skillIdx + 1) % skills.length;
        setTimeout(typeSkill, 400);
      }
    }
  }

  // Blinking cursor
  setInterval(() => {
    if (cursor) cursor.style.opacity = cursor.style.opacity === "0" ? "1" : "0";
  }, 500);

  typeSkill();
</script>

<style>
.hero-skills-typing {
  min-height: 2.5rem;
  font-size: 1.25rem;
  font-family: 'Fira Mono', 'Consolas', 'Menlo', monospace;
  letter-spacing: 0.02em;
  display: flex;
  align-items: center;
}
.typing-cursor {
  display: inline-block;
  width: 1ch;
  color: #2563eb;
  font-weight: bold;
  margin-left: 2px;
  animation: blink 1s steps(2, start) infinite;
}
@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}
</style>

<style>
  .profile-image-container {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .profile-image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid rgba(59, 130, 246, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    animation: float 6s ease-in-out infinite;
  }

  .profile-image:hover {
    transform: scale(1.05);
    border-color: rgb(59, 130, 246);
  }

  .profile-image img {
    transition: transform 0.3s ease;
  }

  .profile-image:hover img {
    transform: scale(1.1);
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @media (max-width: 1024px) {
    .profile-image-container {
      margin: 0 auto;
    }
  }
</style>
